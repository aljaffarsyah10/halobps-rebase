{% if password_alert|length %}
   <div class="alert alert-warning alert-dismissible" role="alert">
      <div class="d-flex mb-2">
         <div>
            <i class="fas fa-exclamation-triangle me-1"></i>
         </div>
         <div>
            {{ password_alert }}
         </div>
      </div>

      <div class="btn-list">
         <a class="btn btn-outline-warning" href="{{ path('/front/updatepassword.php') }} ">
            {{ __('Update my password') }}
         </a>
      </div>
   </div>
{% endif %}

<div class="d-flex justify-content-center">
   <div class="col">
      <div class="d-flex justify-content-start w-75">
         <img alt="BPS Banner" src="../pics/layout/global_layout_bps_banner.png"/>
      </div>
   </div>
   <div class="col-5">
      <div class="d-flex justify-content-center">
         <img class="w-50" alt="HaloSIS Quote" src="../pics/layout/global_layout_quote.png"/>
      </div>
   </div>
   <div class="col">
      <div class="d-flex justify-content-end">
         <h1 style="font-family:mistral;font-size:3vw">#WeCare</h1>
      </div>
   </div>
 </div>

<table class="central">
   {{ call_plugin_hook(constant('Glpi\\Plugin\\Hooks::DISPLAY_CENTRAL')) }}
</table>

{% set optional_grid_item_keys = [
   'survey_list', 'reminder_list', 'rss_feed', 'kb_popular', 'kb_recent', 'kb_lastupdate'
] %}
{% set grid_items = [
   ticket_summary
] %}
{% set survey_list_empty%}
<div class="table-responsive card-table">
   <table class="table table-borderless table-striped table-hover card-table">
     <thead>
       <tr>
         <th colspan="4">
           <a href="#">Survei kepuasan <span class="primary-bg primary-fg count">0</span>
           </a>
         </th>
       </tr>
     </thead>
     <tbody>
      <tr>
         <td colspan="4">Luar biasa! Saat ini Anda sudah mengisi semua survei kepuasan!</td>
      </tr>
     </tbody>
   </table>
 </div>
{% endset %}

{% for optional_grid_item_key in optional_grid_item_keys %}
   {% set item_content = _context[optional_grid_item_key] %}
   {% if item_content is not empty %}
      {% set grid_items = grid_items|merge([
         '<div class="card">' ~ item_content ~ '</div>'
      ]) %}
   {% endif %}
{% endfor %}

{% if _context['survey_list'] is empty %}
   {% set grid_items = grid_items|merge([
      '<div class="card">' ~ survey_list_empty ~ '</div>'
   ]) %}
{% endif %}

{{ include('components/masonry_grid.html.twig', {
   'grid_items': grid_items,
}, with_context = false) }}
